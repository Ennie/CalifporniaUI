local config = { 
    "font" = "Fonts\FRIZQT__.TTF", 
    "fontsize" = 12, 
    "title" = " haste", 
    "a1" = "RIGHT", 
    "a2" = "RIGHT", 
    "x" = 0, 
    "y" = 0, 
} 

    local xStat = CreateFrame("Frame", "StatDisplayPanel", UIParent) 
	xStat:SetHeight(30)
	xStat:SetWidth(100)
--    xStat:SetFrameStrata("BACKGROUND") 
    xStat:SetFrameLevel(2) 
    xStat:SetPoint(config.a1, UIParent, config.a2, config.x, config.y) 

    local Text  = xStat:CreateFontString(nil, "OVERLAY") 
    Text:SetFont(config.font, config.fontsize) 
	Text:SetPoint("LEFT", xStat,"LEFT", 10, 0.5)

    local int = 1 

    local function xUpdate(self, t) 
        spellhaste = GetCombatRating(20) 
        rangedhaste = GetCombatRating(19) 
        attackhaste = GetCombatRating(18) 
         
        if attackhaste > spellhaste and select(2, UnitClass("Player")) ~= "HUNTER" then 
            haste = attackhaste 
        elseif select(2, UnitClass("Player")) == "HUNTER" then 
            haste = rangedhaste 
        else 
            haste = spellhaste 
        end 
         
        int = int - t 
        if int < 0 then 
            Text:SetText(haste.." "..config.title) 
            int = 1 
        end      
    end 

    xStat:SetScript("OnUpdate", xUpdate) 
    xUpdate(xStat, 10) 
